{
  "name": "@hastobegood/crypto-bot-parrot",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "14"
  },
  "type": "module",
  "scripts": {
    "prepare": "yarn husky install",
    "clean": "rm -rf dist .aws-sam reports",
    "build": "yarn tsc",
    "bundle": "yarn webpack",
    "bundle:analyze": "yarn webpack && yarn webpack-bundle-analyzer dist/webpack/stats.json",
    "test": "yarn jest",
    "test:coverage": "yarn jest --collectCoverage",
    "lint": "yarn eslint . --ext .ts",
    "lint:fix": "yarn eslint . --ext .ts --fix",
    "lint:report": "yarn eslint . --ext .ts --format json -o reports/eslint-report.json ",
    "deploy:test": "sam build && sam deploy --config-env test --tags Environment=test Application=CryptoBotParrot",
    "deploy:prod": "sam build && sam deploy --config-env prod --tags Environment=prod Application=CryptoBotParrot"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.78.0",
    "@aws-sdk/client-secrets-manager": "^3.81.0",
    "@aws-sdk/lib-dynamodb": "^3.78.0",
    "@hastobegood/crypto-bot-artillery": "^0.13.0",
    "aws-xray-sdk-core": "^3.3.5",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.95",
    "@types/copy-webpack-plugin": "^10.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "14",
    "@types/randomstring": "^1.1.8",
    "@types/source-map-support": "^0.5.4",
    "@types/uuid": "^8.3.4",
    "@types/webpack-bundle-analyzer": "^4.4.1",
    "@types/webpack-node-externals": "^2.5.3",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.23.0",
    "copy-webpack-plugin": "^10.2.4",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-sonar-reporter": "^2.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.6.2",
    "randomstring": "^1.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.2",
    "webpack-node-externals": "^3.0.0"
  },
  "jestSonar": {
    "reportPath": "reports"
  }
}
