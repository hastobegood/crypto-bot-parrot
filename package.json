    "pino": "^7.5.1",
    "source-map-support": "^0.5.21",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.87",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/fs-extra": "^9.0.13",
