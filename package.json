    "copy-webpack-plugin": "^10.1.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.4",
    "jest-sonar-reporter": "^2.0.0",
    "mockdate": "^3.0.5",
    "prettier": "^2.4.1",
    "randomstring": "^1.2.1",
